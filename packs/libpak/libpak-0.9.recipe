INSTALL()
{
	cd libpak-0.9
	mkdir -p ${DESTDIR}
	echo "" > ${DESTDIR}/.opd
	for z in *.zip;
		do unzip -o $z -d ${DESTDIR}
		echo -e "\n" >> ${DESTDIR}/.opd
		cat ${DESTDIR}/.OptionalPackageDescription >> ${DESTDIR}/.opd
	done
	cp ${DESTDIR}/.opd ${DESTDIR}/.OptionalPackageDescription
}

