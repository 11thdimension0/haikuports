CHECKSUM_MD5="380a496cbe24263a80eb895f87b7c7f4"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd global-5.8.2
	autoreconf -fi
	./configure --prefix=`finddir B_COMMON_DIRECTORY` --with-exuberant-ctags=/bin/ctags
	make
}

INSTALL {
	cd global-5.8.2
	make install
}
