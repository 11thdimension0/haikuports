REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd global-5.9
	autoreconf -fi
	./configure --prefix=/boot/common --with-exuberant-ctags=/bin/ctags --with-posix-sort=/bin/sort
	make
}

INSTALL {
	cd global-5.9
	make install
}
