CHECKSUM_MD5="74607b4a28c9009c6aeeed0e91098917"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd patchutils-0.3.2
	./configure --prefix="$(finddir B_COMMON_DIRECTORY)" \
	--mandir="$(finddir B_COMMON_DOCUMENTATION_DIRECTORY)/man"
	make
}

INSTALL {
	cd patchutils-0.3.2
	make install
