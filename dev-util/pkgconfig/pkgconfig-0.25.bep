DESCRIPTION="pkgconfig" 
HOMEPAGE="http://pkg-config.freedesktop.org/wiki/" 
SRC_URI="http://pkgconfig.freedesktop.org/releases/pkg-config-0.25.tar.gz"
CHECKSUM_MD5="a3270bab3f4b69b7dc6dbdacbcae9745"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd pkg-config-0.25/glib-1.2.10
	mkdir -p m4
	cp `aclocal --print-ac-dir`/libtool.m4 m4
	cp `aclocal --print-ac-dir`/ltoptions.m4 m4
	cp `aclocal --print-ac-dir`/ltversion.m4 m4
	cp `aclocal --print-ac-dir`/ltsugar.m4 m4
	cp `aclocal --print-ac-dir`/lt~obsolete.m4 m4
	libtoolize --force --copy --install
	aclocal -I m4
	autoreconf
	cd ..
	mkdir -p m4
	cp `aclocal --print-ac-dir`/libtool.m4 m4
	cp `aclocal --print-ac-dir`/ltoptions.m4 m4
	cp `aclocal --print-ac-dir`/ltversion.m4 m4
	cp `aclocal --print-ac-dir`/ltsugar.m4 m4
	cp `aclocal --print-ac-dir`/lt~obsolete.m4 m4
	libtoolize --force --copy --install
	aclocal -I m4
	autoreconf	
	automake
	autoconf
	./configure --prefix=`finddir B_COMMON_DIRECTORY`
	make
}

INSTALL {
	cd pkg-config-0.25
	make install
}
