DESCRIPTION="NetSurf build framework for compiling some of their libraries" 
HOMEPAGE="http://www.netsurf-browser.org/" 
SRC_URI="git://git.netsurf-browser.org/buildsystem"
REVISION="1"
STATUS_HAIKU="stable"

BUILD()
{
	cd buildsystem-0
	make
}

INSTALL()
{
	cd buildsystem-0
	make install PREFIX=/boot/common/
}

