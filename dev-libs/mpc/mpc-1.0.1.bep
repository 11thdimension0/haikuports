	./configure --prefix=`finddir B_COMMON_DIRECTORY` \
		--datarootdir=`finddir B_COMMON_DOCUMENTATION_DIRECTORY` \
		--with-gmp=`finddir B_COMMON_DIRECTORY`
	make
}

INSTALL {
	cd mpc-1.0.1
	make install
}

TEST {
	cd mpc-1.0.1
	make check
}

