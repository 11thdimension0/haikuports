SRC_URI="http://www.multiprecision.org/mpc/download/mpc-1.0.1.tar.gz"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND="dev-libs/gmp = 5.0.5"
CHECKSUM_SHA1="8c7e19ad0dd9b3b5cc652273403423d6cf0c5edf"
BUILD {
	cd mpc-1.0.1
#	libtoolize --force --copy --install
#	aclocal -I m4
#	automake --add-missing
