DESCRIPTION="apr - Apache Portable Runtime Library" 
HOMEPAGE="http://apr.apache.org/" 
SRC_URI="http://www.apache.org/dist/apr/apr-1.4.2.tar.gz"
CHECKSUM_MD5="fc80cb54f158c2674f9eeb47a1f672cd"
REVISION="2"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd apr-1.4.2

#	Why is this demanding to have libtool in / ?????
	ln -sf /boot/common/libtool /libtool
#	symlink it for now to make it happy

	libtoolize --force --copy --install
	./buildconf
	./configure --prefix=`finddir B_COMMON_DIRECTORY`
	make
}

INSTALL {
	cd apr-1.4.2
	make install
}
