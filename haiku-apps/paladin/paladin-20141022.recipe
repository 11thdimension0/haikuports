SUMMARY="Paladin is a open source integrated development environment (IDE)"
DESCRIPTION="
Paladin is an open source integrated development environment (IDE) modeled \
after BeOS' BeIDE.
"
HOMEPAGE="http://paladin.sourceforge.net"
SRC_URI="git://github.com/HaikuArchives/Paladin#cec6b2dac93f495c5e472ce8a17862296d3c1d14"
REVISION="1"
LICENSE="MIT"
COPYRIGHT="2008-2010 DarkWyrm"

ARCHITECTURES="x86_gcc2 x86 x86_64"

PROVIDES="
	paladin = $portVersion
	app:Paladin = $portVersion
	app:SymbolFinder = $portVersion
	lib:libhekkel = $portVersion
	"

REQUIRES="
	haiku
	lib:libpcre
	lib:libz
	"

BUILD_REQUIRES="
	haiku_devel
	devel:libpcre
	devel:libz
	"

BUILD_PREREQUIRES="
	cmd:bison
	cmd:find
	cmd:flex
	cmd:gcc
	cmd:jam
	cmd:ld
	cmd:make
	"

USER_SETTINGS_FILE="settings/Paladin_settings"

SOURCE_DIR="Paladin"

BUILD()
{
	./buildsuite.sh $jobs
}

INSTALL()
{
	mkdir -p $appsDir/Paladin
	mkdir -p $libDir
	mkdir -p $binDir
	
	cp -r Paladin/Paladin Paladin/Templates $appsDir/Paladin/
	cp SymbolFinder/SymbolFinder $appsDir/Paladin/
	
	addAppDeskbarSymlink $appsDir/Paladin/Paladin Paladin
	addAppDeskbarSymlink $appsDir/Paladin/SymbolFinder SymbolFinder
}
