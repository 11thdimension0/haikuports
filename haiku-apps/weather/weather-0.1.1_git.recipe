SUMMARY="A simple weather application"
DESCRIPTION="A small weather application built for GCI."
HOMEPAGE="https://github.com/HaikuArchives/Weather"
SOURCE_URI="git+https://github.com/HaikuArchives/Weather.git#a337ad1"
ARCHITECTURES="x86 x86_gcc2 x86_64"
REVISION="1"
LICENSE="MIT"
COPYRIGHT="
	2014 George White
	2015 Przemys≈Çaw Buczkowski
	2015 Janus
	"

BUILD_PREREQUIRES="
	cmd:make
	cmd:gcc
	makefile_engine
	haiku_devel
	"

PROVIDES="
	weather
	app:Weather = $portVersion
	"

BUILD()
{
	make $jobArgs OBJ_DIR=objects
}

INSTALL()
{
	mkdir -p $appsDir
	cp objects/Weather $appsDir
	addAppDeskbarSymlink $appsDir/Weather
}
