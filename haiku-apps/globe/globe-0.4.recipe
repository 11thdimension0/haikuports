	"

BUILD_REQUIRES="
	haiku_devel
	makefile_engine
	cmd:gcc
	cmd:make
	"

PROVIDES="
	globe = $portVersion
	app:Globe = $portVersion
	"

BUILD()
{
	cd src
	make $jobArgs OBJ_DIR=objects
}

INSTALL()
{
	cd src
	mkdir -p $appsDir
	cp objects/Globe $appsDir/Globe
	addAppDeskbarSymlink $appsDir/Globe
}
