REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd globe0.4
	make
}

INSTALL {
	cd globe0.4
	TARGET_DIR=${DESTDIR}`finddir B_APPS_DIRECTORY`/Globe
	mkdir -p $TARGET_DIR
	cp Globe $TARGET_DIR
	cp GlobeBUGList.txt $TARGET_DIR
	cp globe* $TARGET_DIR
	cp LICENSE.txt $TARGET_DIR
	cp NewFeatures.txt $TARGET_DIR
	cp objects.*/Globe* $TARGET_DIR
}
