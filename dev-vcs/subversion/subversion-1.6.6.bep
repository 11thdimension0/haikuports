DESCRIPTION="Subversion is an open source version control system" 
HOMEPAGE="http://subversion.tigris.org" 
SRC_URI="http://subversion.tigris.org/downloads/subversion-1.6.6.tar.bz2"
CHECKSUM_MD5="e5109da756d74c7d98f683f004a539af"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd subversion-1.6.6
	libtoolize --force --copy --install
	aclocal -I build -I build/ac-macros
	autogen.sh
	./configure --prefix=`finddir B_COMMON_DIRECTORY` --with-apr=/boot/common/bin/apr-1-config --with-apr-util=/boot/common/bin/apu-1-config --with-neon=/boot/common --with-editor=lpe --with-zlib=/boot/common
	make
}

INSTALL {
	cd subversion-1.6.6
	make install
}
