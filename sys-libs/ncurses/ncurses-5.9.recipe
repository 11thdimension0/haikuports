	devel:libncursesw = $portVersion compat >= 5
	devel:libncurses++ = $portVersion compat >= 5
	devel:libncurses++w = $portVersion compat >= 5
	devel:libpanel = $portVersion compat >= 5
	devel:libpanelw = $portVersion compat >= 5
	"
REQUIRES_devel="
