DESCRIPTION="readline" 
HOMEPAGE="http://cnswww.cns.cwru.edu/php/chet/readline/rltop.html" 
SRC_URI="ftp://ftp.cwru.edu/pub/bash/readline-6.0.tar.gz"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd readline-6.0
	libtoolize --force --copy --install
	aclocal
	autoconf
	automake
	./configure --prefix=/boot/common
	make
}

INSTALL {
	cd readline-6.0
	make install
}
