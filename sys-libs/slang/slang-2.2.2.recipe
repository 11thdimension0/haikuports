DESCRIPTION="S-Lang is a multi-platform programmer's library designed to allow a developer to create robust multi-platform software." 
HOMEPAGE="http://www.s-lang.org/" 
SRC_URI="ftp://space.mit.edu/pub/davis/slang/v2.2/slang-2.2.2.tar.gz"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
CHECKSUM_MD5="e7183d0acab9cc35fae12849f8b848e2"
BUILD()
{
	cd slang-2.2.2/autoconf
	libtoolize --force --copy --install
	cp autoconf/config.guess config.guess
	cd ..
	sed -i -e '/^TERMCAP=/s:=.*:=:' configure || die
	./configure --prefix=`finddir B_COMMON_DIRECTORY`
	make
}

INSTALL()
{
	cd slang-2.2.2
	make install DESTDIR="${DESTDIR}"
}

