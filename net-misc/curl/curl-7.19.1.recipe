BUILD()
{
	cd curl-7.19.1
       libtoolize --force --copy
       aclocal
       automake
       autoconf
	./configure --prefix=`finddir B_COMMON_DIRECTORY`
	make 
}

INSTALL()
{
	cd curl-7.19.1
	make install
}
