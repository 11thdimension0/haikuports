BUILD {
	cd wget-1.12
	libtoolize --force --copy --install
	aclocal -I m4
	autoconf
	./configure --prefix=`finddir B_COMMON_DIRECTORY` \
		--disable-nls --disable-ipv6
	make 
}

INSTALL {
	cd wget-1.12
	make install
}

