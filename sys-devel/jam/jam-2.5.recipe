DESCRIPTION="jam"
HOMEPAGE="http://www.perforce.com/jam/jam.html"
SRC_URI="git://git.haiku-os.org/buildtools"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
#CHECKSUM_MD5=""
BUILD()
{
	cd jam-2.5/jam
	make
}

INSTALL()
{
	cd jam-2.5/jam
	mkdir -p ${DESTDIR}`finddir B_COMMON_BIN_DIRECTORY`
	cp -a bin.haikux86/jam ${DESTDIR}`finddir B_COMMON_BIN_DIRECTORY`/jam
}
