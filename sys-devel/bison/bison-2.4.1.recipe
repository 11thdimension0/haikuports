SRC_URI="http://ftp.gnu.org/gnu/bison/bison-2.4.1.tar.gz"
CHECKSUM_MD5="c58aa1da418dc9704070872489e89bf5"
REVISION="2"
STATUS_HAIKU="stable"
DEPEND=""
BUILD()
{
	cd bison-2.4.1
	./configure --prefix=`finddir B_COMMON_DIRECTORY` --disable-nls
	make
}

INSTALL()
{
	cd bison-2.4.1
	make install
}

TEST()
{
	cd bison-2.4.1
	make check
}

