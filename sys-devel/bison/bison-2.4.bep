DESCRIPTION="bison - A yacc-compatible parser generator" 
HOMEPAGE="http://www.gnu.org/software/bison/bison.html" 
SRC_URI="http://ftp.gnu.org/gnu/bison/bison-2.4.tar.gz"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd bison-2.4
	./configure --prefix=/boot/common --disable-nls
	make
}

INSTALL {
	cd bison-2.4
	make install
	make check
}
