DESCRIPTION="libtool - a generic library support script" 
HOMEPAGE="http://www.gnu.org/software/libtool" 
SRC_URI="http://ftp.gnu.org/gnu/libtool/libtool-2.2.6b.tar.gz"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd libtool-2.2.6b
	./bootstrap
	./configure --prefix=/boot/common
	make
}

INSTALL {
	cd libtool-2.2.6b
	make install
	make check
}
