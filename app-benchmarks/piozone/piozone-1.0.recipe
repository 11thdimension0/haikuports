ARCHITECTURES="?x86 ?x86_gcc2 ?x86_64"

PROVIDES="
	piozone = $portVersion
	cmd:piozone = $portVersion
	"

REQUIRES="
	haiku >= $haikuVersion
	"

BUILD_REQUIRES="
	haiku_devel >= $haikuVersion
	"

BUILD_PREREQUIRES="
	cmd:make
	cmd:gcc
	"

PATCHES="piozone-1.0.patch"

BUILD()
{
