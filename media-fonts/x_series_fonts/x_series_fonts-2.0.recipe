	true
}

INSTALL()
{
	FONTDIR=${fontsDir}/ttfonts
	mkdir -p ${FONTDIR}
	# http://askubuntu.com/questions/343727/filenames-with-spaces-breaking-for-loop-find-command
	find ../sources* -type f -name '*.ttf' -print0 | while IFS= read -r -d '' file; do
		cp "`printf '%s' "$file"`" ${FONTDIR}
	done
}
