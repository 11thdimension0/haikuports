# TODO: Remove hardcoded paths. The following shows how to get the the file path:
#find /boot/common/lib/perl5 -type f -name unixish.h | grep -FzZ BePC-haiku/CORE/unixish.h

BUILD {
	cd XML-Parser-2.36
	perl Makefile.PL
	mkdir -p /boot/common/lib/perl5/5.10.1/BePC-haiku/CORE/haiku
	cp /boot/common/lib/perl5/5.10.1/BePC-haiku/CORE/unixish.h /boot/common/lib/perl5/5.10.1/BePC-haiku/CORE/haiku/haikuish.h
	make
}

INSTALL {
	cd XML-Parser-2.36
	make install
}
