defineDebugInfoPackage tar \
	$binDir/tar


BUILD()
{
	runConfigure ./configure \
		--disable-nls \
		--disable-gcc-warnings \
		LDFLAGS="-lnetwork" \
		FORCE_UNSAFE_CONFIGURE=1
	make $jobArgs
}

INSTALL()
{
	make install

	rm $libDir/charset.alias
}
