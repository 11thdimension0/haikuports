DESCRIPTION="gsl - The GNU Scientific Library" 
HOMEPAGE="http://www.gnu.org/software/gsl/" 
SRC_URI="http://ftp.gnu.org/gnu/gsl/gsl-1.13.tar.gz"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd gsl-1.13
	libtoolize --force --copy --install
	aclocal
	autoconf
	automake
	./configure --prefix=/boot/common
	make
}

INSTALL {
	cd gsl-1.13
	make install
}
