DESCRIPTION="Tiff library" 
HOMEPAGE="http://www.libtiff.org" 
SRC_URI="ftp://ftp.remotesensing.org/pub/libtiff/tiff-3.9.1.tar.gz"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd tiff-3.9.1
	libtoolize --force --copy --install
	aclocal -I m4
	autoconf
	autoheader
	automake
	./configure --prefix=/boot/common
	make
}

INSTALL {
	cd tiff-3.9.1
	make install
}
