DESCRIPTION="libogg" 
HOMEPAGE="http://www.xiph.org" 
SRC_URI="http://downloads.xiph.org/releases/ogg/libogg-1.1.4.tar.gz"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd libogg-1.1.4
	libtoolize --force --copy --install
	aclocal
	autoconf
	automake
	./configure --prefix=/boot/common
	make
}

INSTALL {
	cd libogg-1.1.4
	make install
}
