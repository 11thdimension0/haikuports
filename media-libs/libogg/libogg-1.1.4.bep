REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd libogg-1.1.4
	libtoolize --force --copy --install
	aclocal
	autoconf
	automake
	./configure --prefix=`finddir B_COMMON_DIRECTORY`
	make
}

INSTALL {
	cd libogg-1.1.4
	make install
}
