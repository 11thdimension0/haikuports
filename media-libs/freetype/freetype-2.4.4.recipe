DESCRIPTION="Freetype - A Free, High-Quality, and Portable Font Engine" 
HOMEPAGE="http://www.freetype.org" 
SRC_URI="http://download.savannah.gnu.org/releases/freetype/freetype-2.4.4.tar.bz2"
CHECKSUM_MD5="b3e2b6e2f1c3e0dffa1fd2a0f848b671"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD()
{
	cd freetype-2.4.4
	sh ./autogen.sh
	./configure --prefix=`finddir B_COMMON_DIRECTORY` --includedir=/boot/develop/headers/3rdparty
	make
}

INSTALL()
{
	cd freetype-2.4.4
	make install
}
