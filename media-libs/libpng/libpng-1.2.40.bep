DESCRIPTION="libpng" 
HOMEPAGE="http://www.libpng.org" 
SRC_URI="ftp://ftp.simplesystems.org/pub/png/src/libpng-1.2.40.tar.gz"
REVISION="1"
STATUS_HAIKU="stable"
DEPEND=""
BUILD {
	cd libpng-1.2.40
	libtoolize --force --copy
	./autogen.sh
	./configure --prefix=/boot/common
	make
}

INSTALL {
	cd libpng-1.2.40
	make install
}
